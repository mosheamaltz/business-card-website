extends layout

block content

    .content
        h1= title 
        p New User? Sign up 
            a(href="sign-up") here
        p Welcome! Please enter your email and password to sign in.
        form(action="reg-signin", method="post") 
            input#email(type="email", name="username")
            input#password(type="password", name="password")
            if errMsg
                p.error Wrong password. Try again.
            input(type="submit", value="LOG IN", class="login-submit")
        p Or,
        a(href="./google/") Sign In With Google
